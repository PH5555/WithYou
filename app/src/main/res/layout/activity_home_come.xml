<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dong.with_you.HomeComeActivity"
    android:gravity="center|top">

    <RelativeLayout
        android:background="@android:color/white"
        android:elevation="5dp"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="136dp"
            android:layout_height="33dp"
            android:src="@drawable/title"/>

    </RelativeLayout>

    <ImageView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bus"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 안전귀가를"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="23sp"/>

    <TextView
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="진행중입니다"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="23sp"
        android:layout_marginBottom="30dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/design_load"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_address"
            android:layout_width="330dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:text="서울시 어쩌구 어쩌구"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남은 시간 : 몇분"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btn_off"
            android:layout_marginTop="12dp"
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:textSize="17sp"
            android:background="@drawable/design_button3"
            android:text="안전 귀가 OFF"
            android:textColor="#ffffff"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>
